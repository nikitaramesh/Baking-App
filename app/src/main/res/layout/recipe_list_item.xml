<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/text_margin"
    android:layout_marginTop="10dp"
    android:layout_marginRight="@dimen/text_margin"
    android:layout_marginBottom="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/large_margin"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card">

        <ImageView
            android:id="@+id/recipe_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="@string/recipe_img"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/nutella_pie" />

        <TextView
            android:id="@+id/tv_recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/recipe_img"
            android:layout_toRightOf="@id/recipe_img"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:text="Nutella Pie" />

        <TextView
            android:id="@+id/tv_servings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_recipe_name"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/recipe_img"
            android:layout_toRightOf="@id/recipe_img"
            tools:text="Servings: 1" />

    </RelativeLayout>

</android.support.v7.widget.CardView>